import Layout from '../layouts/MainLayout.astro';
---

<Layout title="VeloxOS - Roadmap 2026/2027">
    <div id="page-content" transition:animate="fade">    
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full pointer-events-none">
            <div class="absolute top-20 left-10 w-72 h-72 bg-[#00b0f0]/10 blur-[120px] rounded-full opacity-50"></div>
            <div class="absolute bottom-40 right-10 w-96 h-96 bg-blue-600/5 blur-[150px] rounded-full opacity-50"></div>
        </div>

        <div class="roadmap-container relative z-10">
            <div class="roadmap-intro">
                <span class="inline-block px-4 py-1.5 mb-6 text-xs font-bold tracking-widest text-[#00b0f0] uppercase bg-[#00b0f0]/10 rounded-full border border-[#00b0f0]/20">
                    The Development Path
                </span>
                <h1 class="text-4xl md:text-6xl font-extrabold mb-6 text-slate-900 dark:text-white transition-colors tracking-tight">
                    üó∫Ô∏è Roadmap <span class="text-[#00b0f0]">2026/2027</span>
                </h1>
                <p class="text-slate-600 dark:text-slate-400 text-lg max-w-2xl mx-auto leading-relaxed">
                    VeloxOS is a work in progress. Track our journey from the first preview to a global repository infrastructure.
                </p>
            </div>

            <div class="roadmap-timeline">
                
                <div class="phase-item">
                    <span class="phase-badge">SPRING 2026</span>
                    <div class="phase-card group">
                        <div class="flex flex-col sm:flex-row justify-between items-start gap-3 mb-6">
                            <h3 class="phase-title">üé® Phase 1: The Identity</h3>
                            <span class="status-badge status-progress">In Progress</span>
                        </div>
                        <ul class="task-list">
                            <li class="task-item completed">
                                <svg class="w-5 h-5 text-[#00b0f0]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path></svg>
                                Custom GRUB Branding
                            </li>
                            <li class="task-item">
                                <div class="w-5 h-5 rounded-full border-2 border-[#00b0f0]/30 flex items-center justify-center">
                                    <div class="w-2 h-2 bg-[#00b0f0] rounded-full animate-pulse"></div>
                                </div>
                                Custom Calamares Installer & Branding
                            </li>
                            <li class="task-item">
                                <div class="w-5 h-5 rounded-full border-2 border-slate-300 dark:border-white/10"></div>
                                VeloxOS COSMIC Desktop (Custom Layout)
                            </li>
                        </ul>
                        <div class="milestone-box">
                            <span class="text-[#00b0f0]">üìç Milestone:</span> First Public Technical Preview (ISO)
                        </div>
                    </div>
                </div>

                <div class="phase-item">
                    <span class="phase-badge">SUMMER 2026</span>
                    <div class="phase-card group opacity-90">
                        <div class="flex flex-col sm:flex-row justify-between items-start gap-3 mb-6">
                            <h3 class="phase-title">üõ† Phase 2: The Optimization</h3>
                            <span class="status-badge status-planned">Planned</span>
                        </div>
                        <ul class="task-list">
                            <li class="task-item">üîπ Automated zRAM & Performance Tuning</li>
                            <li class="task-item">üîπ Full CachyOS Repo & PGP Key Integration</li>
                        </ul>
                        <div class="milestone-box">
                            <span class="text-slate-500 dark:text-slate-400">üìç Milestone:</span> First Stable Release Candidate
                        </div>
                    </div>
                </div>

                <div class="phase-item">
                    <span class="phase-badge">VISION 2027</span>
                    <div class="phase-card border-dashed opacity-75 grayscale-[0.5] hover:grayscale-0 transition-all duration-500">
                        <div class="flex flex-col sm:flex-row justify-between items-start gap-3 mb-6">
                            <h3 class="phase-title">üí° Phase 3: Long-term Goals</h3>
                            <span class="status-badge status-planned">Future</span>
                        </div>
                        <ul class="task-list">
                            <li class="task-item">üîπ Independent VeloxOS Repository Staging</li>
                            <li class="task-item">üîπ Advanced Update-Governance Pipeline</li>
                        </ul>
                        <div class="milestone-box opacity-60">üìç Phase based on community growth</div>
                    </div>
                </div>

            </div>
        </div>

        <div class="max-w-[900px] mx-auto px-6 mt-16">
            <div class="relative group">
                <div class="absolute -inset-1 bg-gradient-to-r from-[#5865f2] to-[#00b0f0] rounded-[24px] blur opacity-10 group-hover:opacity-25 transition duration-1000"></div>
                <div class="relative p-10 bg-white dark:bg-slate-900 border border-slate-200 dark:border-white/10 rounded-[22px] text-center shadow-xl">
                    <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">Shape the future of VeloxOS</h2>
                    <p class="text-slate-600 dark:text-slate-400 mb-8 max-w-md mx-auto">
                        Do you have ideas for Phase 3 or want to help with development? Join our developer hub on Discord.
                    </p>
                    <a href="https://discord.gg/pgHSK8NGxG" target="_blank" class="inline-flex items-center gap-3 bg-[#5865f2] hover:bg-[#4752c4] text-white no-underline px-8 py-4 rounded-xl font-bold transition-all shadow-lg hover:-translate-y-1">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.006 14.006 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                        </svg>
                        Join Discord Community
                    </a>
                </div>
            </div>
        </div>
  </div>
</Layout>

<style>
    .roadmap-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 20px;
        font-family: 'Inter', sans-serif;
    }

    .roadmap-intro {
        text-align: center;
        margin-bottom: 80px;
    }

    .roadmap-timeline {
        position: relative;
        border-left: 2px solid rgba(0, 176, 240, 0.2);
        margin-left: 20px;
        padding-left: 40px;
    }

    .phase-item {
        position: relative;
        margin-bottom: 80px;
    }

    /* Leuchtende Connector Dots */
    .phase-item::before {
        content: '';
        position: absolute;
        left: -51px;
        top: 0;
        width: 20px;
        height: 20px;
        background: white;
        border: 3px solid #00b0f0;
        border-radius: 50%;
        box-shadow: 0 0 0 4px rgba(0, 176, 240, 0.1);
        z-index: 10;
    }

    :global(.dark) .phase-item::before {
        background: #0d1117;
        box-shadow: 0 0 20px rgba(0, 176, 240, 0.4);
    }

    .phase-badge {
        display: inline-block;
        padding: 4px 14px;
        background: rgba(0, 176, 240, 0.05);
        border: 1px solid rgba(0, 176, 240, 0.2);
        color: #00b0f0;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 800;
        margin-bottom: 16px;
        letter-spacing: 0.05em;
    }

    .phase-card {
        background: #f8fafc;
        border: 1px solid rgba(0, 0, 0, 0.05);
        padding: 30px;
        border-radius: 20px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    :global(.dark) .phase-card {
        background: rgba(30, 41, 59, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(12px);
    }

    .phase-card:hover {
        transform: translateY(-5px);
        border-color: rgba(0, 176, 240, 0.3);
        box-shadow: 0 20px 40px rgba(0, 176, 240, 0.05);
    }

    .phase-title {
        color: #0f172a;
        font-size: 1.5rem;
        font-weight: 800;
        margin: 0;
    }

    :global(.dark) .phase-title {
        color: #ffffff;
    }

    .task-list {
        list-style: none;
        padding: 0;
        margin-top: 5px;
    }

    .task-item {
        color: #475569;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1rem;
    }

    :global(.dark) .task-item {
        color: #94a3b8;
    }

    .task-item.completed {
        color: #0f172a;
        font-weight: 600;
    }

    :global(.dark) .task-item.completed {
        color: white;
    }

    .milestone-box {
        margin-top: 25px;
        padding: 12px 18px;
        background: rgba(0, 176, 240, 0.03);
        border-radius: 12px;
        font-size: 0.9rem;
        font-weight: 700;
        border: 1px dashed rgba(0, 176, 240, 0.2);
        color: #00b0f0;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 8px;
        font-size: 0.7rem;
        font-weight: 800;
        text-transform: uppercase;
    }

    .status-progress {
        background: #fff7ed;
        color: #c2410c;
        border: 1px solid #fdba74;
    }

    :global(.dark) .status-progress {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
    }

    .status-planned {
        background: #f1f5f9;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }

    :global(.dark) .status-planned {
        background: rgba(255, 255, 255, 0.05);
        color: #94a3b8;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
</style>


