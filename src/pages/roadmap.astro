<style>
    .roadmap-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Inter', sans-serif;
    }

    .roadmap-intro {
        text-align: center;
        margin-bottom: 60px;
    }

    .roadmap-timeline {
        position: relative;
        border-left: 2px solid rgba(0, 176, 240, 0.3);
        margin-left: 20px;
        padding-left: 40px;
    }

    .phase-item {
        position: relative;
        margin-bottom: 60px;
    }

    .phase-item::before {
        content: '';
        position: absolute;
        left: -51px;
        top: 0;
        width: 20px;
        height: 20px;
        background: #0d1117;
        border: 2px solid #00b0f0;
        border-radius: 50%;
        box-shadow: 0 0 15px rgba(0, 176, 240, 0.6);
        z-index: 10;
    }

    .phase-badge {
        display: inline-block;
        padding: 4px 12px;
        background: rgba(0, 176, 240, 0.1);
        border: 1px solid #00b0f0;
        color: #00b0f0;
        border-radius: 20px;
        font-size: 0.8em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .phase-card {
        background: rgba(22, 27, 34, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 25px;
        border-radius: 12px;
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease;
    }

    .phase-card:hover {
        transform: scale(1.02);
        border-color: rgba(0, 176, 240, 0.3);
    }

    .phase-title {
        color: #ffffff;
        font-size: 1.4em;
        margin: 0 0 15px 0;
    }

    .task-list {
        list-style: none;
        padding: 0;
    }

    .task-item {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .milestone-box {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px dashed rgba(255, 255, 255, 0.1);
        color: #00b0f0;
        font-weight: bold;
        font-style: italic;
    }

    .status-badge {
        display: inline-block;
        padding: 2px 10px;
        border-radius: 4px;
        font-size: 0.7em;
        font-weight: bold;
        text-transform: uppercase;
        margin-left: 10px;
        vertical-align: middle;
    }

    .status-progress {
        background: rgba(255, 165, 0, 0.1);
        color: #ffa500;
        border: 1px solid #ffa500;
        box-shadow: 0 0 8px rgba(255, 165, 0, 0.3);
    }

    .status-planned {
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
</style>
